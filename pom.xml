<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.muromtsev</groupId>
    <version>0.0.1-SNAPSHOT</version>
    <artifactId>ilr-center-parent-pom</artifactId>
    <packaging>pom</packaging>

    <name>ilr-center-parent-pom</name>
    <description>Parent Pom for the ilr-center project</description>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>4.0.1</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <properties>
        <docker.image.prefix>ilr-center</docker.image.prefix>
    </properties>

    <modules>
        <module>config-server</module>
        <module>employee-service</module>
        <module>organization-service</module>
        <module>gateway-server</module>
    </modules>
    <build>
        <plugins>
            <plugin>
                <groupId>com.spotify</groupId>
                <artifactId>dockerfile-maven-plugin</artifactId>
                <version>1.4.13</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>